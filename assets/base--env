export EDITOR="nano"
export VISUAL="${EDITOR}"
export PAGER="less"

export XDG_CACHE_HOME="${HOME}/.cache"
export XDG_CONFIG_HOME="${HOME}/.config"
export XDG_DATA_HOME="${HOME}/.local/share"

export PIP_REQUIRE_VIRTUALENV=true

# Non standard
export XDG_LIB_HOME="${HOME}/.local/lib"

# Fix applications to respect XDG
export ASDF_CONFIG_FILE="${XDG_CONFIG_HOME}/asdf"
export ASDF_DATA_DIR="${XDG_LIB_HOME}/asdf"
export DOCKER_CONFIG="${XDG_CONFIG_HOME}/docker"
export GRADLE_USER_HOME="${XDG_DATA_HOME}/gradle"
export LESSHISTFILE=-
export NODE_REPL_HISTORY="${XDG_DATA_HOME}/node_repl_history"
export NPM_CONFIG_CACHE=${XDG_LIB_HOME}/npm
export NPM_CONFIG_USERCONFIG="${XDG_CONFIG_HOME}/npm/npmrc"
export ZDOTDIR="${XDG_DATA_HOME}/zsh"

# Path
export DEFAULT_PATH="${PATH}"
export PATH="${ASDF_DATA_DIR}/shims:${XDG_DATA_HOME}/asdf/bin:${DEFAULT_PATH}:${HOME}/.local/bin:./node_modules/.bin"
