set autoindent

# Use bold instead of reverse video
set boldtext

# Characters treated as closing brackets when justifying paragraphs
set brackets ""')>]}"

# Constantly display the cursor position in the status bar
set constantshow

# Hard-wrap lines at column number number
set fill 72

# Opening and closing brackets that can be found by bracket searches
set matchbrackets "(<[{)>]}"

# Enable mouse support
set mouse

# Characters treated as closing punctuation when justifying paragraphs
set punct "!.?"

# Do extended regular expression searches by default
set regexp

# Better home key when line starts with space
set smarthome

# Use smooth scrolling by default
set smooth

# Allow nano to be suspended with ^Z
set suspend

set tabsize 4
set tabstospaces

include ~/.config/nano/syntax/Dockerfile.nanorc
include ~/.config/nano/syntax/conf.nanorc
include ~/.config/nano/syntax/dot.nanorc
include ~/.config/nano/syntax/dotenv.nanorc
include ~/.config/nano/syntax/git.nanorc
include ~/.config/nano/syntax/ini.nanorc
include ~/.config/nano/syntax/json.nanorc
include ~/.config/nano/syntax/markdown.nanorc
include ~/.config/nano/syntax/nanorc.nanorc
include ~/.config/nano/syntax/patch.nanorc
include ~/.config/nano/syntax/sh.nanorc
include ~/.config/nano/syntax/yaml.nanorc
include ~/.config/nano/syntax/zsh.nanorc
